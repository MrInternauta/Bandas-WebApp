@model MvcBandas.ViewModels.ConciertoCreateViewModel

@{
    ViewData["Title"] = "Crear Concierto";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Lugar" class="control-label"></label>
                <input asp-for="Lugar" class="form-control" />
                <span asp-validation-for="Lugar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BandaId" class="control-label"></label>
                <select asp-for="BandaId" class="custom-select" asp-items="Model.Bandas">
                    <option value="">--Seleccionar banda--</option>
                </select>
                <span asp-validation-for="BandaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-primary mr-2" type="submit">
                    <i class="fas fa-save"></i> Crear
                </button>
                <a asp-action="Index" class="btn btn-secondary"> <i class="fas fa-undo"></i> Regresar</a>

            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
