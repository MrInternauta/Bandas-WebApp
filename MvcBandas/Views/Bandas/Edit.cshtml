@model MvcBandas.Models.Banda

@{
    ViewData["Title"] = "Editar banda " + Model.Nombre;
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vocalistas" class="control-label"></label>
                <input asp-for="Vocalistas" class="form-control" />
                <span asp-validation-for="Vocalistas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroIntegrantes" class="control-label"></label>
                <input asp-for="NumeroIntegrantes" class="form-control" />
                <span asp-validation-for="NumeroIntegrantes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnioFormacion" class="control-label"></label>
                <input asp-for="AnioFormacion" class="form-control" />
                <span asp-validation-for="AnioFormacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaRegistro" class="control-label"></label>
                <input asp-for="FechaRegistro" class="form-control" />
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genero" class="control-label"></label>
                <input asp-for="Genero" class="form-control" />
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-primary mr-2" type="submit">
                    <i class="fas fa-save"></i> Guardar
                </button>
                <a asp-action="Index" class="btn btn-secondary"> <i class="fas fa-undo"></i> Regresar</a>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
